.detail-container{
    width: 100%;
    background-color: #f5f5f5;
}
.head{
    padding-bottom: 40rpx;
    padding-top: 40rpx;
    display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}
.head image{
    width: 200rpx;
    height: 300rpx;
    box-shadow:2px 2px 3px #e3e3e3;
}
.author {
    font-size: 28rpx;
    color: #999;
    /* margin-bottom: 30rpx; */
  }
  .title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
  }
  .wrap{
    width: 690rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background-color: #fff;
    padding: 30rpx;
  }
  .comment-wrap{
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
  }
  .comment-wrap v-tag{
      margin-right: 15rpx;
      margin-bottom: 10rpx;
  }
  .comment-wrap .num{
    margin-left: 5px;
    font-size: 22rpx;
    color: #aaa;
  }
  .comment-wrap v-tag:first-child view{
      background-color: #fffbdd
  }
  .comment-wrap v-tag:nth-child(2) view {
    background-color: #eefbff;
  }
  .content{
    text-indent: 58rpx; 
    /* font-weight: 300; */
    /* font-family: PingFangSC; */
    color:#000000;
    font-weight: 500;
  }